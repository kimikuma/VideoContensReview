<div class="container mt-4">
 <div class="row">
  <div class="col-md-5 offset-md-1 col-5 offset-1">
   <h6><i class="fa-solid fa-tag"></i>タグ一覧</h6>
   <div class="tag_list">
    <% @tags.each do |tag| %>
      <%=link_to tag.name, search_tag_path(tag: tag.name) %></br>
    <% end %>
    <%=paginate @tags %>
   </div> 
  </div>
  <div class="col-md-6 col-6" %>
   <h6><i class="fa-solid fa-video"></i>配信サイト一覧</h6>
   <div class="vod_list">
    <% @vods.each do |vod| %>
      <%=link_to vod.name, search_vod_path(vod: vod.name) %></br>
    <% end %>
    <%=paginate @vods %>
   </div> 
  </div>
 </div>
</div>   
