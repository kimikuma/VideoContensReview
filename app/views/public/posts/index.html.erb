<div class="container mt-5">
  <div class="row">
    <div class="col-md-3">
    </div>  
    <div class="col-md-9">
       <% @posts.each do |post| %>
        <div class="content d-flex">
         <div class="content_img"> 
          <%=image_tag post.get_image(100,100), style: "width:150px; height:100px;", class: "mx-5"%>
         </div> 
         <div class="content_item">
          <h5><%=link_to post.title, post_path(post) %></h5>
          <p><%=post.impression %></p>
          <p><%=image_tag post.user.get_profile_image(30,30) %>
             <%=link_to post.user.name, user_path(post.user) %>
          </p>
         </div>  
         <div class="information mx-4">
          <br>
          <br>
          <br>
          <p><i class="fa-solid fa-comment" id="icon"></i>
             <span class="count"><%=post.comments.count %></span>
          </p>
         </div> 
       </div>
      <% end %>
    </div>
  </div>
</div>      
