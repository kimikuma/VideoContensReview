<div class="container mt-3">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <%=image_tag @user.get_profile_image(50,50) %>
      <%=@user.name %><br>
      <% if @user==current_user %>
       <%=link_to "編集", edit_user_path(current_user), class: "btn btn-outline-success mt-2" %>
      <% end %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-8 offset-md-2">
      <table class="table table-light table-striped table-hover">
        <% @posts.each do |post| %>
          <tr>
            <td><%=link_to post_path(post) do %>
                <%=image_tag post.get_image(100,100) %>
                <% end %>
            </td>
            <td><%=post.title %><br>
                <%=post.impression %>
            </td>
          </tr>      
        <% end %>  
      </table> 
    </div>   
  </div>  
</div> 

