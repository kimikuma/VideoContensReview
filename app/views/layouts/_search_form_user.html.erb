<%=form_with url: searches_path, method: :get do |f| %>
 <%=f.text_field :word, placeholder: "Search" %><br>
 <%=f.select :model, options_for_select({"user"=>"User","投稿"=>"Post"}) %>
 <%=f.select :condition, options_for_select({"部分一致"=>"partial","前方一致"=>"forward","後方一致"=>"backward","完全一致"=>"perfect"}) %>
 <%=f.submit "Search", class: "btn btn-outline-success mx-2 mt-1" %>
<% end %> 
 